{
  "globals": {
    "expect" : true,
    "browser": true,
    "$": true,
    "$$": true
  },
  "env": {
    "es2021": true,
    "node": true

  },
  "extends": [
    "eslint:recommended",
    "plugin:cypress/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [ "reports"],
  "rules": {
    "no-unused-vars": "warn",
    "max-len": ["error", { "code": 120 }],
    "require-jsdoc" : 0,
    "new-cap" : 0
  }
}
